package com.bewithme.www.domain;

public class Com_CommentPagingVO {

	private int pageNo; //현재 화면에 출력된 페이지 네이션의 번호
	private int qty; //한페이지당 보여지는 댓글의 수
	
	public Com_CommentPagingVO() {
		this(1,5);
	}
	public Com_CommentPagingVO(int pageNo, int qty) {
		this.pageNo = pageNo;
		this.qty = qty;
	}
	
	public int getPageStart() { //출력될 게시글의 시작 번호 (DB상 linit에 시작값을 구하는 메서드) 
		return (this.pageNo-1)*qty; 
	}
	
	//setter,getter
	public int getPageNo() {
		return pageNo;
	}
	public void setPageNo(int pageNo) {
		this.pageNo = pageNo;
	}
	public int getQty() {
		return qty;
	}
	public void setQty(int qty) {
		this.qty = qty;
	}
		
	@Override
	public String toString() {
		return "PagingVO [pageNo=" + pageNo + ", qty=" + qty + ", keyword=" + keyword + ", type=" + type + "]";
	}
		
	
	
	//검색 부분
	private String keyword;
	private String type;

	public String getKeyword() {
		return keyword;
	}
	public void setKeyword(String keyword) {
		this.keyword = keyword;
	}
	public String getType() {
		return type;
	}
	public void setType(String type) {
		this.type = type;
	}
	
	//타입이 두개이상인 경우 생성자 (여러가지의 타입을 같이 검색에 사용하기 위해서 배열 사용)
	public String[] getTypeToArray() {
		return this.type == null? new String[] {} : this.type.split("");
	
	}
	
	
}
